<?xml version="1.0" encoding="UTF-8"?>
<comline>

    <!-- 整合 Spring -->
    <spring path="classpath:springConfig/dispatcher-servlet.xml" />

    <!-- 国际化支持 -->
    <local local="zh_CN" tranfile="文件路径" />

    <!-- 命令定义 -->
    <command>

        <!-- 自定义命令1：要么是静态方法，要么类必须有无参构造器 -->
        <cmd id="命令 id/完整命令名" short="参数名缩写" require="true/false，是否必选" tip="注释，只用于显示说明" method="类名::静态方法">
            <!-- 定义命令参数 -->
            <property id="参数名" type="参数类型：int、double、string、boolean、file" tip="注释，只用于显示说明" ref="如果有 Spring，可以使用 ref 指明要引用的 bean" />
            <property id="参数名" type="参数类型" tip="注释，只用于显示说明" />
            <property id="参数名" type="参数类型" tip="注释，只用于显示说明" />
        </cmd>

        <!-- 自定义命令2：如果有 Spring 支持就使用 ref 指明要调用的类 -->
        <cmd id="命令 id/完整命令名" short="参数名缩写" require="true/false，是否必选" tip="注释，只用于显示说明" method="实例方法"
            ref="如果有 Spring 可以使用 ref 指明要引用的 bean">
            <property id="参数名" type="参数类型：int、double、string、boolean、file" tip="注释，只用于显示说明" ref="如果有 Spring，可以使用 ref 指明要引用的 bean" />
            <property id="参数名" type="参数类型" tip="注释，只用于显示说明" />
            <property id="参数名" type="参数类型" tip="注释，只用于显示说明" />
        </cmd>

        <cmd-group id="命令组 id">
            <cmd id="命令 id/完整命令名" short="参数名缩写" require="true/false，是否必选" tip="注释，只用于显示说明" method="类名::静态方法">
                <!-- 定义命令参数 -->
                <property id="参数名" type="参数类型：int、double、string、boolean、file" tip="注释，只用于显示说明"
                    ref="如果有 Spring，可以使用 ref 指明要引用的 bean" />
                <property id="参数名" type="参数类型" tip="注释，只用于显示说明" />
                <property id="参数名" type="参数类型" tip="注释，只用于显示说明" />
            </cmd>
        </cmd-group>

    </command>

    <!-- 菜单定义：用于交互模式 -->
    <menu>

        <!-- 菜单项写法1：菜单项就是命令，引用命令 -->
        <item index="0" name="菜单项名称，只用于显示说明" tip="注释，只用于显示说明" command="命令 id" />

        <!-- 菜单项写法2：菜单项就是命令，内含命令 -->
        <item index="1" name="菜单项名称，只用于显示说明" tip="注释，只用于显示说明">
            <command id="命令 id" method="方法名" ref="如果有 Spring，可以使用 ref 指明要引用的 bean">
                <param id="参数名" type="参数类型：int、double、string、boolean、file" tip="注释，只用于显示说明" ref="如果有 Spring，可以使用 ref 指明要引用的 bean" />
                <param id="参数名" type="参数类型" tip="注释，只用于显示说明" />
                <param id="参数名" type="参数类型" tip="注释，只用于显示说明" />
            </command>
        </item>

        <!-- 菜单项写法3：嵌套菜单，含有子菜单 -->
        <item-groups index="2" name="calculate taketime" explain="注释">
            <!-- 空菜单项没有任何相应，如果选中，仅输出提示信息，然后返回上级菜单 -->
            <item index="1" name="abc" explain="abc" />
        </item-groups>

    </menu>

</comline>



















